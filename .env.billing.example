# Billing Module Configuration Template

# =============================================================================
# Payment Providers
# =============================================================================

# Stripe Configuration
STRIPE_API_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# PayPal Configuration
# PAYPAL_CLIENT_ID=your_paypal_client_id
# PAYPAL_CLIENT_SECRET=your_paypal_client_secret
# PAYPAL_WEBHOOK_ID=your_paypal_webhook_id
# PAYPAL_ENVIRONMENT=sandbox  # or 'live' for production

# =============================================================================
# Tax Configuration
# =============================================================================

# Tax Provider (avalara, taxjar, or leave empty for manual)
# TAX_PROVIDER=avalara

# Avalara Configuration
# AVALARA_API_KEY=your_avalara_api_key
# AVALARA_COMPANY_CODE=your_company_code

# TaxJar Configuration
# TAXJAR_API_TOKEN=your_taxjar_token

# Default tax rate (percentage, e.g., 8.5 for 8.5%)
DEFAULT_TAX_RATE=0.0

# =============================================================================
# Currency Configuration (Single Currency System)
# =============================================================================

DEFAULT_CURRENCY=USD
CURRENCY_SYMBOL=$
CURRENCY_DECIMAL_PLACES=2
CURRENCY_FORMAT={symbol}{amount}
USE_MINOR_UNITS=true  # Store amounts in cents

# =============================================================================
# Invoice Configuration
# =============================================================================

# Invoice number format (supports {year}, {month}, {day}, {sequence})
INVOICE_NUMBER_FORMAT=INV-{year}-{sequence:06d}
INVOICE_DUE_DAYS=30
INVOICE_AUTO_FINALIZE=false
OVERDUE_CHECK_HOURS=24
SEND_PAYMENT_REMINDERS=true

# =============================================================================
# Payment Configuration
# =============================================================================

DEFAULT_PAYMENT_PROVIDER=stripe
AUTO_RETRY_FAILED_PAYMENTS=true
MAX_PAYMENT_RETRY_ATTEMPTS=3
REQUIRE_PAYMENT_VERIFICATION=true

# =============================================================================
# Webhook Configuration (Optional)
# =============================================================================

# WEBHOOK_ENDPOINT_URL=https://your-domain.com
# WEBHOOK_SIGNING_SECRET=your_webhook_signing_secret
# WEBHOOK_RETRY_ATTEMPTS=3
# WEBHOOK_TIMEOUT_SECONDS=30

# =============================================================================
# Feature Flags
# =============================================================================

ENABLE_SUBSCRIPTIONS=true
ENABLE_CREDIT_NOTES=true
ENABLE_TAX_CALCULATION=true
ENABLE_MULTI_CURRENCY=true
ENABLE_WEBHOOKS=false

# =============================================================================
# Audit and Compliance
# =============================================================================

BILLING_AUDIT_LOG=true
PCI_COMPLIANCE_MODE=false
BILLING_DATA_RETENTION_DAYS=2555  # 7 years