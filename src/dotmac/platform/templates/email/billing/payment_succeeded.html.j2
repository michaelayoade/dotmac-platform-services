{% extends "base/email_base.html.j2" %}

{% block content %}
<h2 style="margin: 0 0 16px; color: #111827; font-size: 20px;">Payment Successful</h2>
<p style="color: #4b5563; line-height: 1.6; margin: 0 0 24px;">Thank you! Your payment has been processed successfully.</p>

<h3 style="margin: 0 0 12px; color: #374151; font-size: 16px;">Payment Details:</h3>
<table role="presentation" width="100%" cellspacing="0" cellpadding="0" style="margin: 0 0 24px;">
    <tr style="background-color: #f9fafb;">
        <td style="padding: 12px; font-weight: 600; color: #374151;">Amount:</td>
        <td style="padding: 12px; text-align: right; color: #111827; font-weight: 600;">{{ amount_formatted }}</td>
    </tr>
    <tr>
        <td style="padding: 12px; font-weight: 600; color: #374151;">Payment Date:</td>
        <td style="padding: 12px; text-align: right; color: #111827;">{{ payment_date | format_date }}</td>
    </tr>
    <tr style="background-color: #f9fafb;">
        <td style="padding: 12px; font-weight: 600; color: #374151;">Payment Method:</td>
        <td style="padding: 12px; text-align: right; color: #111827;">{{ payment_method }}</td>
    </tr>
    <tr>
        <td style="padding: 12px; font-weight: 600; color: #374151;">Invoice Number:</td>
        <td style="padding: 12px; text-align: right; color: #111827;">{{ invoice_number }}</td>
    </tr>
</table>

<p style="text-align: center; margin: 0;">
    <a href="{{ invoice_url }}" class="button">Download Invoice</a>
</p>
{% endblock %}
