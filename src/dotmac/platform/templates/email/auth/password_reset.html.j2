{% extends "base/email_base.html.j2" %}

{% block content %}
<h2 style="margin: 0 0 16px; color: #111827; font-size: 20px;">Reset Your Password</h2>
<p style="color: #4b5563; line-height: 1.6; margin: 0 0 24px;">
    Hi {{ user_name }},
</p>
<p style="color: #4b5563; line-height: 1.6; margin: 0 0 24px;">
    We received a request to reset your password for your {{ app_name }} account.
</p>

<p style="text-align: center; margin: 0 0 24px;">
    <a href="{{ reset_link }}" class="button">Reset Password</a>
</p>

<p style="color: #4b5563; line-height: 1.6; margin: 0 0 16px;">
    Or copy and paste this link into your browser:
</p>
<p style="background-color: #f9fafb; padding: 12px; border-radius: 6px; word-break: break-all; font-size: 13px; color: #4b5563; margin: 0 0 24px;">
    {{ reset_link }}
</p>

<div style="background-color: #fef3c7; border-radius: 8px; padding: 16px; margin: 0 0 24px;">
    <p style="margin: 0; color: #92400e; font-size: 14px;">
        This link will expire in {{ expiry_hours }} hour{% if expiry_hours != 1 %}s{% endif %}.
    </p>
</div>

<p style="color: #6b7280; font-size: 13px; line-height: 1.6; margin: 0;">
    If you didn't request a password reset, you can safely ignore this email. Your password will remain unchanged.
</p>
{% endblock %}
