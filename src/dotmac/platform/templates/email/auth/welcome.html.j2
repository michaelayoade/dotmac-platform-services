{% extends "base/email_base.html.j2" %}

{% block content %}
<h2 style="margin: 0 0 16px; color: #111827; font-size: 20px;">Welcome, {{ user_name }}!</h2>
<p style="color: #4b5563; line-height: 1.6; margin: 0 0 24px;">
    Your account has been successfully created.
</p>

<div style="background-color: #f9fafb; border-radius: 8px; padding: 16px; margin: 0 0 24px;">
    <p style="margin: 0; color: #374151;">
        <strong>Registered email:</strong> {{ email }}
    </p>
</div>

<h3 style="margin: 0 0 12px; color: #374151; font-size: 16px;">To get started:</h3>
<ol style="color: #4b5563; line-height: 1.8; margin: 0 0 24px; padding-left: 24px;">
    <li>Complete your profile</li>
    <li>Explore our features</li>
    <li>Configure your settings</li>
</ol>

{% if login_url %}
<p style="text-align: center; margin: 0;">
    <a href="{{ login_url }}" class="button">Get Started</a>
</p>
{% endif %}

<p style="color: #6b7280; font-size: 13px; line-height: 1.6; margin: 24px 0 0;">
    If you didn't create this account, please contact support immediately.
</p>
{% endblock %}
