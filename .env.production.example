# Production Environment Configuration
# Copy this file to .env.production and update the values

# Application
ENVIRONMENT=production
LOG_LEVEL=info
DEBUG=false

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
AUTH__JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
NEXTAUTH_SECRET=your-nextauth-secret-change-this-in-production

# Database Configuration
POSTGRES_DB=dotmac_prod
POSTGRES_USER=dotmac_user
POSTGRES_PASSWORD=your-strong-database-password

# Database Connection (for application)
DATABASE__HOST=postgres
DATABASE__PORT=5432
DATABASE__DATABASE=dotmac_prod
DATABASE__USERNAME=dotmac_user
DATABASE__PASSWORD=your-strong-database-password
DATABASE__SSL_MODE=prefer

# Redis Configuration
REDIS__HOST=redis
REDIS__PORT=6379
REDIS__DB=0
REDIS__PASSWORD=

# Vault Configuration
VAULT_ROOT_TOKEN=your-vault-root-token
VAULT__ENABLED=true
VAULT__URL=http://openbao:8200
VAULT__TOKEN=your-vault-root-token

# Celery Configuration
CELERY__BROKER_URL=redis://redis:6379/2
CELERY__RESULT_BACKEND=redis://redis:6379/3

# MinIO/S3 Configuration
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_ENDPOINT=minio:9000
MINIO_BUCKET=dotmac-storage

# Frontend URLs
NEXT_PUBLIC_API_BASE_URL=https://api.yourdomain.com
NEXTAUTH_URL=https://app.yourdomain.com

# Email Configuration
SMTP_HOST=smtp.youremailprovider.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
FROM_EMAIL=noreply@yourdomain.com

# Monitoring & Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:4317
OTEL_SERVICE_NAME=dotmac-platform
ENABLE_METRICS=true
ENABLE_TRACING=true

# Analytics & Monitoring
GRAFANA_PASSWORD=your-grafana-password
PROMETHEUS_RETENTION_TIME=15d

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=dotmac-backups
BACKUP_S3_ACCESS_KEY=your-backup-access-key
BACKUP_S3_SECRET_KEY=your-backup-secret-key

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Security Headers
ENABLE_SECURITY_HEADERS=true
CORS_ALLOWED_ORIGINS=https://app.yourdomain.com

# Logging
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=/app/logs/app.log
LOG_FILE_MAX_SIZE=100MB
LOG_FILE_RETENTION=30

# Feature Flags
FEATURE_ANALYTICS_ENABLED=true
FEATURE_BILLING_ENABLED=true
FEATURE_AUDIT_ENABLED=true
