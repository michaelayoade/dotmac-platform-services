# Production Environment Configuration
# Copy this file to .env.prod and fill in your production values
# NEVER commit .env.prod to version control

# Application
ENVIRONMENT=production
APP_VERSION=1.0.0
SECRET_KEY=change-this-to-a-secure-random-key
LOG_LEVEL=info

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=dotmac_prod
POSTGRES_USER=dotmac_prod
POSTGRES_PASSWORD=change-this-secure-password
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change-this-secure-password
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0
REDIS_CACHE_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/1
REDIS_SESSION_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/2

# RabbitMQ
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=change-this-secure-password
CELERY_BROKER_URL=amqp://${RABBITMQ_USER}:${RABBITMQ_PASSWORD}@${RABBITMQ_HOST}:${RABBITMQ_PORT}//
CELERY_RESULT_BACKEND=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/3

# Vault/OpenBao
VAULT_HOST=vault
VAULT_PORT=8200
VAULT_TOKEN=change-this-to-vault-token
VAULT_URL=http://${VAULT_HOST}:${VAULT_PORT}
VAULT_NAMESPACE=dotmac
VAULT_MOUNT_PATH=secret
VAULT_KV_VERSION=2

# MinIO Object Storage
MINIO_HOST=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=change-this-access-key
MINIO_SECRET_KEY=change-this-secret-key
MINIO_ENDPOINT=${MINIO_HOST}:${MINIO_PORT}
MINIO_USE_SSL=false
MINIO_REGION=us-east-1

# JWT Configuration
JWT_SECRET_KEY=change-this-to-secure-jwt-secret
JWT_ALGORITHM=RS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30
JWT_ISSUER=dotmac-platform
JWT_AUDIENCE=dotmac-api

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false
CORS_ORIGINS=["https://app.example.com"]
CORS_ALLOW_CREDENTIALS=true
TRUSTED_HOSTS=["api.example.com", "localhost"]

# Gunicorn Configuration
GUNICORN_WORKERS=4
GUNICORN_WORKER_CLASS=uvicorn.workers.UvicornWorker
GUNICORN_BIND=0.0.0.0:8000
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=50
GUNICORN_TIMEOUT=60
GUNICORN_KEEPALIVE=5
GUNICORN_ACCESS_LOG=-
GUNICORN_ERROR_LOG=-
GUNICORN_LOG_LEVEL=info

# Celery Configuration
CELERY_LOGLEVEL=info
CELERY_CONCURRENCY=4
CELERY_MAX_TASKS_PER_CHILD=1000
CELERY_TASK_SOFT_TIME_LIMIT=300
CELERY_TASK_TIME_LIMIT=600
CELERY_QUEUES=celery,priority,background

# Monitoring & Observability
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_USER=admin
GRAFANA_PASSWORD=change-this-secure-password
LOKI_ENABLED=true
LOKI_URL=http://loki:3100

# OpenTelemetry
OTEL_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
OTEL_SERVICE_NAME=dotmac-platform
OTEL_RESOURCE_ATTRIBUTES=environment=production,version=${APP_VERSION}
OTEL_TRACES_EXPORTER=otlp
OTEL_METRICS_EXPORTER=otlp
OTEL_LOGS_EXPORTER=otlp

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100/hour
RATE_LIMIT_STORAGE_URL=${REDIS_URL}

# Feature Flags
FEATURE_FLAGS_ENABLED=true
FEATURE_MFA_ENABLED=true
FEATURE_WEBSOCKETS_ENABLED=true
FEATURE_SEARCH_ENABLED=true

# Security
SECURITY_HEADERS_ENABLED=true
SECURITY_CSP_ENABLED=true
SECURITY_HSTS_ENABLED=true
SECURITY_HSTS_MAX_AGE=31536000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=dotmac-backups

# Email Configuration (Optional)
SMTP_ENABLED=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=change-this-password
SMTP_FROM=noreply@example.com
SMTP_USE_TLS=true

# Sentry Error Tracking (Optional)
SENTRY_ENABLED=false
SENTRY_DSN=https://xxx@sentry.io/yyy

# Docker Registry (for CI/CD)
DOCKER_REGISTRY=registry.example.com
DOCKER_REGISTRY_USER=deploy
DOCKER_REGISTRY_PASSWORD=change-this-password

# Deployment
DEPLOY_ENV=production
DEPLOY_REGION=us-east-1
DEPLOY_CLUSTER=dotmac-prod
RUN_MIGRATIONS=true