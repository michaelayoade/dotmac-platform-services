# DotMac Platform Frontend Environment Configuration
# Copy this file to .env.local and fill in the values

# =============================================================================
# API Configuration
# =============================================================================

# Backend API URL (required)
# For local development, use http://localhost:8000
# For production, use your API domain
NEXT_PUBLIC_API_URL=http://localhost:8000

# =============================================================================
# Authentication (NextAuth.js)
# =============================================================================

# NextAuth Secret - generate with: openssl rand -base64 32
# Required for production
NEXTAUTH_SECRET=your-secret-key-here

# NextAuth URL - the canonical URL of your site
# For local development: http://localhost:3000
# For production: https://your-domain.com
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# OAuth Providers (Optional)
# Configure these for social login support
# =============================================================================

# Google OAuth
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# Microsoft/Azure AD OAuth
# MICROSOFT_CLIENT_ID=your-microsoft-client-id
# MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
# MICROSOFT_TENANT_ID=your-tenant-id

# GitHub OAuth
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret

# =============================================================================
# Feature Flags (Optional)
# =============================================================================

# Enable GraphQL playground in development
# NEXT_PUBLIC_ENABLE_GRAPHQL_PLAYGROUND=true

# Enable debug mode
# NEXT_PUBLIC_DEBUG=true

# =============================================================================
# Analytics & Monitoring (Optional)
# =============================================================================

# Sentry DSN for error tracking
# NEXT_PUBLIC_SENTRY_DSN=

# Analytics tracking ID
# NEXT_PUBLIC_ANALYTICS_ID=

# =============================================================================
# Multi-tenant Configuration (Optional)
# =============================================================================

# Default tenant for single-tenant deployments
# NEXT_PUBLIC_DEFAULT_TENANT_ID=

# Enable multi-tenant mode
# NEXT_PUBLIC_MULTI_TENANT=true

# =============================================================================
# Audit Log Configuration (Optional)
# =============================================================================

# JWT secret for signing frontend audit logs (must match backend AUDIT__FRONTEND_LOG_JWT_SECRET)
# Generate with: openssl rand -base64 32
# NEXT_PUBLIC_FRONTEND_LOG_JWT_SECRET=your-secret-here
