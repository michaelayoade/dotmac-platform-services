# DotMac Platform - Frontend Environment Variables
# Copy this file to .env.local and update the values

# API Configuration
# Note: Use NEXT_PUBLIC_API_BASE_URL (not API_URL) to match codebase standard
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_API_TIMEOUT=30000

# Application Settings
NEXT_PUBLIC_APP_NAME=DotMac Platform
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENVIRONMENT=development

# Feature Flags (all public - no secrets)
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_ENABLE_MOCK_DATA=false

# Multi-tenancy
NEXT_PUBLIC_DEFAULT_TENANT_ID=default
NEXT_PUBLIC_MULTI_TENANT_MODE=false

# UI Configuration
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_ENABLE_THEME_SWITCHER=true

# Observability - Connect to backend OpenTelemetry Collector
NEXT_PUBLIC_OTEL_ENDPOINT=http://localhost:4318

# Public Keys Only (NO SECRETS!)
# All sensitive keys must be handled by the backend
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=
NEXT_PUBLIC_SENTRY_DSN=

# Note: ALL secrets (API keys, OAuth secrets, etc.) are managed
# by the backend through OpenBao/Vault. The frontend should NEVER
# have direct access to any sensitive credentials.