{
  "name": "@dotmac/base-app",
  "version": "0.1.0",
  "private": true,
  "description": "DotMac base Next.js application pre-integrated with platform services.",
  "scripts": {
    "dev": "next dev",
    "dev:mock": "NEXT_PUBLIC_MOCK_API=true next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next dist out",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:billing": "playwright test billing.spec.ts customer.spec.ts",
    "test:e2e:auth": "playwright test auth.spec.ts",
    "test:e2e:critical": "playwright test --grep '@critical'",
    "test:visual": "playwright test e2e/visual.spec.ts",
    "test:visual:update": "playwright test e2e/visual.spec.ts --update-snapshots",
    "test:visual:ui": "playwright test e2e/visual.spec.ts --ui",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "cd ../../.. && (husky install || echo 'Husky not installed, skipping')",
    "generate:api": "bash scripts/generate-api-types.sh",
    "generate:api:prod": "API_URL=https://api.dotmac.com bash scripts/generate-api-types.sh",
    "postinstall": "echo 'Skipping API generation during install'"
  },
  "dependencies": {
    "@dotmac/auth": "workspace:*",
    "@dotmac/design-system": "workspace:*",
    "@dotmac/headless": "workspace:*",
    "@dotmac/http-client": "workspace:*",
    "@dotmac/notifications": "workspace:*",
    "@dotmac/primitives": "workspace:*",
    "@dotmac/providers": "workspace:*",
    "@dotmac/ui": "workspace:*",
    "@hookform/resolvers": "^3.9.1",
    "@radix-ui/react-alert-dialog": "^1.1.2",
    "@tanstack/react-query": "^5.59.20",
    "@tanstack/react-table": "^8.20.5",
    "axios": "^1.6.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.0.0",
    "lucide-react": "^0.378.0",
    "next": "^14.2.25",
    "next-themes": "^0.3.0",
    "openapi-fetch": "^0.14.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "^7.51.3",
    "tailwind-merge": "^2.5.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.0",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/nextjs": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@playwright/test": "^1.49.1",
    "@eslint/eslintrc": "^3.2.0",
    "autoprefixer": "^10.4.18",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.25",
    "jest": "^29.7.0",
    "jest-axe": "^9.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "msw": "^2.11.3",
    "postcss": "^8.4.35",
    "recharts": "^2.15.4",
    "storybook": "^8.6.14",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}