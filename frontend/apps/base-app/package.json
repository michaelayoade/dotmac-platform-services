{
  "name": "@dotmac/base-app",
  "version": "0.1.0",
  "private": true,
  "description": "DotMac base Next.js application pre-integrated with platform services.",
  "scripts": {
    "dev": "next dev",
    "dev:mock": "NEXT_PUBLIC_MOCK_API=true next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next dist out",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:billing": "playwright test billing.spec.ts customer.spec.ts",
    "test:e2e:auth": "playwright test auth.spec.ts",
    "test:e2e:critical": "playwright test --grep '@critical'",
    "storybook": "cd ../../shared/packages/primitives && pnpm storybook",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "cd ../../.. && husky install"
  },
  "dependencies": {
    "@dotmac/auth": "workspace:*",
    "@dotmac/design-system": "workspace:*",
    "@dotmac/headless": "workspace:*",
    "@dotmac/http-client": "workspace:*",
    "@dotmac/notifications": "workspace:*",
    "@dotmac/primitives": "workspace:*",
    "@dotmac/providers": "workspace:*",
    "@dotmac/ui": "workspace:*",
    "@hookform/resolvers": "^3.3.4",
    "@tanstack/react-query": "^5.59.20",
    "axios": "^1.6.7",
    "date-fns": "^3.0.0",
    "lucide-react": "^0.378.0",
    "next": "14.2.5",
    "next-themes": "^0.3.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "^7.51.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@playwright/test": "^1.49.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "msw": "^2.11.3",
    "postcss": "^8.4.35",
    "recharts": "^2.15.4",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}