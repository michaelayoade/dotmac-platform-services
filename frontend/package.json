{
  "name": "@dotmac/frontend-shared",
  "version": "1.0.0",
  "private": true,
  "description": "Reusable DotMac frontend workspace containing shared packages only.",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd .. && poetry run uvicorn dotmac.platform.main:app --reload --host 0.0.0.0 --port 8000",
    "dev:frontend": "pnpm --filter @dotmac/base-app dev",
    "dev:services": "cd .. && docker-compose up -d postgres redis minio",
    "dev:all": "npm run dev:services && sleep 5 && npm run dev",
    "build": "pnpm -r --filter ./shared/packages/** run build && pnpm build:base-app",
    "lint": "pnpm -r --filter ./shared/packages/** run lint && pnpm --filter @dotmac/base-app lint",
    "test": "pnpm -r --filter ./shared/packages/** run test --passWithNoTests",
    "test:ci": "pnpm -r --filter ./shared/packages/** run test --passWithNoTests && pnpm --filter @dotmac/base-app test:ci",
    "test:coverage": "pnpm -r --filter ./shared/packages/** run test --coverage && pnpm --filter @dotmac/base-app test --coverage",
    "type-check": "pnpm -r --filter ./shared/packages/** run type-check && pnpm --filter @dotmac/base-app type-check",
    "generate:types": "openapi-typescript http://localhost:8000/openapi.json --output shared/types/api.ts",
    "generate:api-client": "openapi-typescript ../openapi.json --output shared/packages/http-client/src/generated-schema.ts",
    "dev:base-app": "pnpm --filter @dotmac/base-app dev",
    "build:base-app": "pnpm --filter @dotmac/base-app build",
    "e2e": "playwright test",
    "e2e:ci": "playwright test --reporter=github",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug",
    "clean": "pnpm -r --filter ./shared/packages/** run clean && pnpm --filter @dotmac/base-app run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "openapi-typescript": "^7.5.2"
  }
}
