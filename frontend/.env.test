# Test environment configuration
# Copy this to .env.test.local and customize values as needed

# Base URLs
PLAYWRIGHT_BASE_URL=http://localhost:3000
PLAYWRIGHT_API_URL=http://localhost:8000

# Test user credentials
# These should match users in your test database or mock data
TEST_ADMIN_EMAIL=admin@test.local
TEST_ADMIN_PASSWORD=TestPassword123!

TEST_PARTNER_EMAIL=partner@test.local
TEST_PARTNER_PASSWORD=TestPassword123!

TEST_TENANT_EMAIL=tenant@test.local
TEST_TENANT_PASSWORD=TestPassword123!

TEST_VIEWER_EMAIL=viewer@test.local
TEST_VIEWER_PASSWORD=TestPassword123!

# Feature flags for testing
NEXT_PUBLIC_TEST_MODE=true

# Disable analytics in test mode
NEXT_PUBLIC_ANALYTICS_ENABLED=false
