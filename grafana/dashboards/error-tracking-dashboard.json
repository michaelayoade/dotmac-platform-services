{
  "dashboard": {
    "title": "DotMac - Error Tracking & Monitoring",
    "tags": ["errors", "monitoring", "alerts"],
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Error Rate Overview",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(dotmac_http_errors_total[5m]))",
            "legendFormat": "Errors/sec"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "reduceOptions": {
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            },
            "unit": "reqps"
          }
        }
      },
      {
        "id": 2,
        "title": "4xx Errors (Last Hour)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum(increase(dotmac_http_4xx_errors_total[1h]))",
            "legendFormat": "4xx Errors"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 100, "color": "yellow"},
                {"value": 500, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "5xx Errors (Last Hour)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(increase(dotmac_http_5xx_errors_total[1h]))",
            "legendFormat": "5xx Errors"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 10, "color": "yellow"},
                {"value": 50, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Exception Count (Last Hour)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "sum(increase(dotmac_exceptions_total[1h]))",
            "legendFormat": "Exceptions"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 5, "color": "yellow"},
                {"value": 20, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "HTTP Errors Over Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "sum(rate(dotmac_http_4xx_errors_total[5m])) by (status_code)",
            "legendFormat": "4xx - {{status_code}}"
          },
          {
            "expr": "sum(rate(dotmac_http_5xx_errors_total[5m])) by (status_code)",
            "legendFormat": "5xx - {{status_code}}"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Errors/sec"},
          {"show": false}
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {
          "show": true,
          "alignAsTable": true,
          "avg": true,
          "max": true,
          "current": true
        }
      },
      {
        "id": 6,
        "title": "Top Error Endpoints",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "topk(10, sum by (endpoint, status_code) (increase(dotmac_http_errors_total[1h])))",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "indexByName": {},
              "renameByName": {
                "endpoint": "Endpoint",
                "status_code": "Status Code",
                "Value": "Error Count"
              }
            }
          }
        ]
      },
      {
        "id": 7,
        "title": "Exceptions by Type",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "topk(10, sum by (exception_type) (increase(dotmac_exceptions_total[1h])))"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          }
        }
      },
      {
        "id": 8,
        "title": "Database Errors",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 12},
        "targets": [
          {
            "expr": "sum(rate(dotmac_database_errors_total[5m])) by (error_type)",
            "legendFormat": "{{error_type}}"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Errors/sec"},
          {"show": false}
        ]
      },
      {
        "id": 9,
        "title": "Authentication Failures",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 12},
        "targets": [
          {
            "expr": "sum(rate(dotmac_auth_failures_total[5m])) by (failure_reason)",
            "legendFormat": "{{failure_reason}}"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Failures/sec"},
          {"show": false}
        ]
      },
      {
        "id": 10,
        "title": "Error Rate by Tenant",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "topk(10, sum by (tenant_id) (rate(dotmac_http_errors_total[5m])))",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "renameByName": {
                "tenant_id": "Tenant ID",
                "Value": "Errors/sec"
              }
            }
          }
        ]
      },
      {
        "id": 11,
        "title": "External API Errors",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "sum(rate(dotmac_external_api_errors_total[5m])) by (service)",
            "legendFormat": "{{service}}"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Errors/sec"},
          {"show": false}
        ]
      },
      {
        "id": 12,
        "title": "Rate Limit Violations",
        "type": "graph",
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "sum(rate(dotmac_rate_limit_exceeded_total[5m])) by (endpoint)",
            "legendFormat": "{{endpoint}}"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Violations/sec"},
          {"show": false}
        ],
        "alert": {
          "name": "High Rate Limit Violations",
          "conditions": [
            {
              "evaluator": {"params": [10], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "message": "Rate limit violations are exceeding threshold",
          "noDataState": "no_data"
        }
      },
      {
        "id": 13,
        "title": "Error Response Time Distribution",
        "type": "heatmap",
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 28},
        "targets": [
          {
            "expr": "sum(rate(dotmac_error_response_time_seconds_bucket[5m])) by (le)",
            "format": "heatmap",
            "legendFormat": "{{le}}"
          }
        ],
        "dataFormat": "tsbuckets"
      }
    ]
  }
}
