name: Frontend Tests

# NOTE: This workflow is DEPRECATED and will be removed.
# Frontend unit tests, linting, and type checking are now in ci.yml
# E2E tests are in e2e-tests.yml
# This workflow only handles build checks and security audits temporarily.

on:
  push:
    branches: [main, dev/*]
    paths:
      - 'frontend/**'
      - '.github/workflows/frontend-tests.yml'
  pull_request:
    branches: [main]
    paths:
      - 'frontend/**'
      - '.github/workflows/frontend-tests.yml'

env:
  NODE_VERSION: '18'
  PNPM_VERSION: '8'

jobs:
  # Deprecation notice - this workflow will be removed
  deprecation-notice:
    name: Workflow Deprecated
    runs-on: ubuntu-latest
    steps:
      - name: Notice
        run: |
          echo "⚠️  This workflow is deprecated."
          echo "Frontend tests have moved to:"
          echo "  - Unit tests & linting: .github/workflows/ci.yml"
          echo "  - E2E tests: .github/workflows/e2e-tests.yml"
          echo "  - Visual regression: .github/workflows/visual-regression.yml"
          echo ""
          echo "This workflow will be removed in a future update."